<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="odom_frame_id" default="camera_init"/>
    <arg name="base_frame_id" default="base_link"/>
    <arg name="global_frame_id" default="map"/>
    <arg name="odom_topic" default="/Odometry" />
    <arg name="ns" default="/"/>
    <arg name="pointcloud_topic" default="/ouster/points"/>
    <arg name="output" default="screen"/>

    <arg name="min_obstacle_height" default="-100"/>
    <arg name="max_obstacle_height" default="100"/>
    <arg name="origin_z" default="0"/>
    <arg name="obstacles_range" default="3"/>
    <arg name="raytrace_range" default="3.5"/>

    <arg name="topic" default="ouster/points"/>

    <arg name="costmap_size" default="10"/>
    <arg name="lethality_threshold" default="70"/>
    <arg name="inflation_radius" default="0.4"/>

    <!-- typically 4. increase due to low yaw -->
    <arg name="oscillation_timeout" default="16"/>


    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="$(arg output)">
        <rosparam file="$(find jackal_navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find jackal_navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find jackal_navigation)/params/odom_nav_params/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find jackal_navigation)/params/odom_nav_params/global_costmap_params.yaml" command="load"/>
        <rosparam file="$(find jackal_navigation)/params/move_base_params.yaml" command="load"/>
        <rosparam file="$(find jackal_navigation)/params/base_local_planner_params.yaml" command="load"/>
        <rosparam file="$(find jackal_navigation)/params/global_planner_params.yaml" command="load"/>

        <!-- Reset frame_id parameters using user input data -->
        <param name="base_global_planner" type="string" value="global_planner/GlobalPlanner" />
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />
        <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
        <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
        <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="TrajectoryPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

        <remap from="odom" to="$(arg odom_topic)"/>
        <remap from="scan" to="$(arg pointcloud_topic)"/>
        <remap from="cmd_vel" to="/twist_auto"/>

        <param name="local_costmap/obstacles_layer/os1_lidar/min_obstacle_height" value="$(arg min_obstacle_height)"/>
        <param name="local_costmap/obstacles_layer/os1_lidar/max_obstacle_height" value="$(arg max_obstacle_height)"/>
        <param name="local_costmap/obstacles_layer/os1_lidar/obstacle_range" value="$(arg obstacles_range)"/>

        <param name="local_costmap/obstacles_layer/os1_lidar/topic" value="$(arg topic)"/>

        <param name="local_costmap/origin_z" value="$(arg origin_z)"/>
        <param name="local_costmap/obstacles_layer/origin_z" value="$(arg origin_z)"/>

        <param name="local_costmap/obstacles_layer/obstacles_range" value="$(arg obstacles_range)"/>
        <param name="local_costmap/obstacles_layer/raytrace_range" value="$(arg raytrace_range)"/>

        <param name="local_costmap/width" value="$(arg costmap_size)"/>
        <param name="local_costmap/height" value="$(arg costmap_size)"/>

        <param name="local_costmap/max_obstacle_height" value="$(arg max_obstacle_height)"/>

        <param name="local_costmap/inflater_layer/inflation_radius" value="$(arg inflation_radius)"/>
        <param name="local_costmap/static_layer/lethal_cost_threshold" value="$(arg lethality_threshold)"/>

        <param name="global_costmap/obstacles_layer/os1_lidar/min_obstacle_height" value="$(arg min_obstacle_height)"/>
        <param name="global_costmap/obstacles_layer/os1_lidar/max_obstacle_height" value="$(arg max_obstacle_height)"/>
        <param name="global_costmap/obstacles_layer/os1_lidar/obstacle_range" value="$(arg obstacles_range)"/>

        <param name="global_costmap/obstacles_layer/os1_lidar/topic" value="$(arg topic)"/>

        <param name="global_costmap/obstacles_layer/obstacles_range" value="$(arg obstacles_range)"/>
        <param name="global_costmap/obstacles_layer/raytrace_range" value="$(arg raytrace_range)"/>

        <param name="global_costmap/inflater_layer/inflation_radius" value="$(arg inflation_radius)"/>
        <param name="global_costmap/static_layer/lethal_cost_threshold" value="$(arg lethality_threshold)"/>

        <param name="oscillation_timeout" value="$(arg oscillation_timeout)"/>
    </node>
</launch>
